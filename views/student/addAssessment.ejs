<%- include('../includes/head.ejs') %>
<body>
<%- include('../includes/navbar.ejs') %>
<div class="container">
<div class="row">
<%- include('../includes/menu.ejs') %>
<!-- content -->
<div class="col-md-9">
    <div class="panel panel-primary">
        <div class="panel-heading">
          <%= title %> 
        </div>
<div class="panel-body">
  <div class="form-horizontal">
    <div class="row">
        <div class="col-md-8">

        <form <% if(edit) {%> action="/assessment-edit" <% }else{ %> action="/assessment-add" <% } %>  method="post">
            <% if(edit) {%> <input type="hidden" value="<%=assessment.id %>" name="id" id="id"> <% } %>  
            <div class="form-group">
                <label for="email" class="control-label col-md-3">Nik</label>
                <div class="col-md-8">
                      <select name="student_id" class="form-control">
                        <% if(edit) {%> 
                        <option selected value="<%= assessment.id%>"><%= assessment.nik%> - <%=assessment.name %></option><% } %> 
                        <% if(student.length>0) {%> 
                        <% student.forEach(function(student){ %> 
                        <option value="<%= student.id%>"><%= student.nik%> - <%=student.name %></option>
                        <% }) }%> 
                      </select>
                </div>
            </div>

            <div class="form-group">
                <label for="name" class="control-label col-md-3">Score</label>
                <div class="col-md-8">
                    <input type="number" <% if(edit) {%>value="<%= assessment.score %>"<% } %>  name="score" id="score"
                        class="form-control">
                </div>
            </div>
        </div>

    </div>
</div>
</div>

<div class="panel-footer">
<div class="row">
    <div class="col-md-8">
        <div class="row">
            <div class="col-md-offset-3 col-md-6">
                <button type="submit" class="btn btn-primary"> <%=edit === true ? 'Update':'Simpan'%></button>
                <a href="/assessment" class="btn btn-default">Cancel</a>
            </div>
        </div>
    </div>
</div>
</div>
</form>

</div>
</div>

<!-- content -->
<%- include('../includes/footer.ejs') %>
</body>
</html>